{% extends 'base.html.twig' %}

{% block title %}Nft{% endblock %}

{% block body %}
    <h1>Nft</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ nft.id }}</td>
            </tr>
            <tr>
                <th>ImageUrl</th>
                <td>{{ nft.imageUrl }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ nft.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ nft.price }}</td>
            </tr>
            <tr>
                <th>DateDrop</th>
                <td>{{ nft.dateDrop ? nft.dateDrop|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Categories</th>
                <td>{% for oneCategory in nft.category %}
                {{ oneCategory.name }}
                {% endfor %}
                </td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_nft_index') }}">back to list</a>

{% endblock %}
